			<% } %>
	</div>


	<!-- Aviso de erros, campos nao preenchidos -->
	<div class="container" style="position:relative; left:1000px; top:50px;">

		<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalExemplo">
			Adicionar uma nova Noticia
		</button>

		<!-- Modal -->
		<div class="modal fade" id="modalExemplo" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
			aria-hidden="true">
			<div class="modal-dialog" role="document">
				<div class="modal-content">
					
					<div class="modal-header" style="height: 1cm;">
						<button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>

					<div class="modal-body">

						# Todos os campos devem ser preenchidos.

						<!-- Validacao de entrada -->
						<% if(validacao.length>0) { %>

							<div class="row">
								<div class="col-md-12">
									<div class="alert alert-danger">
										<strong>Atenção!</strong>
										<ul>
											<% for(var i=0; i < validacao.length; i++) { %>
												<li>
													<%= validacao[i].msg %>
												</li>
												<% } %>
										</ul>
									</div>
								</div>
							</div>

							<% } %>

								<!-- formulario -->
							<div class="row">
								<div class="form_adicionar_noticia">

									<form action="/noticias/salvar" method="post" autocomplete="off">
										<div class="form-group" >
											<label for="titulo">Título:</label>
											<input type="text" class="form-control" id="titulo" name="titulo"
												value="<%=noticia.titulo%>">
										</div>

										<div class="form-group">
											<label for="pwd">Descrição:</label>
											<textarea class="form-control" id="descricao" name="descricao"
												value="<%=noticia.descricao%>"></textarea>
										</div>

										<div class="form-group">
											<label for="pwd">Tema:</label>
											<select name="tema" id="tema">
												<option value="Esportes">Esportes</option>
												<option value="Politica">Política</option>
												<option value="Entreterimento">Entreterimento</option>
												<option value="Famosos">Famosos</option>
											</select>
										</div>

										<div class="form-group">
											<label for="pwd">Link:</label>
											<input type="text" class="form-control" id="link" name="link"
												value="<%=noticia.link%>">
										</div>

										<div class="form-group">
											<label for="pwd">Link da imagem:</label>
											<input type="text" class="form-control" id="link_imagem"
												name="link_imagem" value="<%=noticia.link_image%>">
										</div>

										<button type="button" class="btn btn-secondary"
											style="background-color: rgb(170, 44, 22); color: white;"
											data-dismiss="modal">Fechar</button>
											
										<button type="submit" class="btn btn-default"
											style="background-color: green; color: white;">Cadastrar</button>

									</form>
									<!-- fim do formulario -->
								</div>
							</div>

					</div>

				</div>
			</div>
		</div>

	</div>

	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"
